<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- ðŸ”¹ Header: Logo + Profile -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="337dp"
            android:layout_height="match_parent"
            android:src="@drawable/unieats_logo" />

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/default_pfp" />
    </LinearLayout>

    <!-- ðŸ”¹ Search Bar -->
    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search restaurants..."
        android:drawableStart="@android:drawable/ic_menu_search"
        android:background="@drawable/search_bar_bg"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp" />

    <!-- ðŸ”¹ Fragment Container (optional) -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="visible" /> <!-- Set to GONE by default -->

    <!-- ðŸ”¹ RecyclerView (for when not using fragment) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="visible" />
</LinearLayout>
